{
  "extends": ["next/core-web-vitals", "plugin:@jjoriping/eslint-plugin/all"],
  "rules": {
    "semi": [2, "always"],
    "linebreak-style": 0,
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error",
    "@typescript-eslint/no-confusing-void-expression": "error"
  },
  "plugins": ["@jjoriping/eslint-plugin"],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  }
}
